#include<stdio.h>

int is_even (int num);  // Declare the function

 
void main() {
	int num = 54321;
	int missing = is_even(num);
	printf("%d\n", missing);
}


int is_even(int num) {
	int n1 = num % 10;
	int n2 = num / 10 % 10;
	int n3 = num / 100 % 10;
	int answer = 0;

	if (num < 100) {
		if (n1 < n2) {
			return -1;
		}

		return 1;
	}
	if (n1 < n2 && n2 < n3) {
		answer = -1;
	}
	else
		if (n1 > n2 && n2 > n3) {
			answer = 1;
		}
		else {
			return 0;
		}
		
	answer= answer + is_even(num/10);
	if (answer < 0) {
		return -1;
	}
	else
		return 1;
}


