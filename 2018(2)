#include<stdio.h>
#include<string.h>
int numDuplicate(char,char);

int main() {
	int number;
	char s[] = "aldd";
	char s1[] = "aba";
	number = numDuplicate (s,s1);
	printf("The number is: %d \n", number);
}

int equalChar(char *a, char *b) { 
	int i;
	for (i=0; i < strlen(b); i++) {
		if (a[i] != b[i]) {
			return 0;
		}
	}
	return 1;
}
int numDuplicate(char* s, char *s1){
	int i;
	int len = strlen(s);
	int counter = 0;
	for (i = 0; i != len; i++) {
		if (s[0] == s1[0]) {
			counter += equalChar(s, s1);
			s++;
		}
		else {
			s++;
		}
	}
	return counter;
}
