#include<stdio.h>

int is_even (int num);  // Declare the function

 
void main() {
	int num = 5152;
	int missing = is_even(num);
	printf("%d\n", missing);
}


int is_even(int num) {
	int sum = num % 10;
	if (num < 10) {
		return sum;
	}
	sum= sum+ is_even(num/10);

	if (sum % 2 == 0) {
		return 1;
	}
	else
		return 0;
}
