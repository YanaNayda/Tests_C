#include<stdio.h>

int is_even (int num);  // Declare the function

 
void main() {
	int num = 9467;
	int missing = is_even(num);
	printf("%d\n", missing);
}


int is_even(int num) {
	int n1 = num % 10;
	int answer = 0;
	
	if (num < 10) {
		if (num % 2 == 0) {
			answer = 1;
			return answer;
		}
		else
			answer = -1;
			return answer;
	}
	if (num == 0) {
		answer = 1;
	}
	else
		if (num % 2 == 0) {
			answer = 1;
		}
		else
			answer = -1;
	

	answer= answer + is_even(num/10);

	return answer;
}



////////////////////////////////////////////////////EX3
#include<stdio.h>
#include<string.h>
int numDuplicate(char,char,int);

int main() {
	int number;
	int n = 13;
	char s[]= { 'b','a','a','-','b','r','b','r','a','$','i', 'a','6'};
	char s1[] = "barbara";
	number = numDuplicate (s,s1,n);
	printf("The number is: %d \n", number);
}
int numDuplicate(char* s, char *s1, int *n){
	 int i=0;
	 int arrs[26] = { 0 };
	 int arrs1[26] = { 0 };

	while( i<n ) {
		if (s[0] <= 'z' && s[0] >= 'a') {
			arrs[*s-'a']++;
		}
		*s++;
		i++;
	}
	while (*s1) {
		arrs1[*s1 - 'a']++;
		s1++;
	}
	for (i = 0; i < 26; i++) {
		if (arrs1[i] > arrs[i]) {
			return 0;
		}
	}
	return 1;
}
	


